{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "ES6",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
},
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}